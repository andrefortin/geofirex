{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "sourceMap": true,
    "target": "es6",
    "types":[
      "jest",
      "node",
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/puppeteer-tsd/src/index.d.ts"
  ],
  "exclude": ["dist/**/*", "spec/**/*", "integration/**/*", "example/**/*"]
}